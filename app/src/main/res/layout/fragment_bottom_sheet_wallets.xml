<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_sheet_wallets"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:theme="@style/AppTheme"
    android:orientation="vertical">
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_wallets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:itemBackground="@drawable/nav_item_wallet_bg"
        app:itemTextColor="@drawable/nav_item_wallet_text_color"
        app:itemIconTint="@drawable/nav_item_wallet_text_color"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_home"
        app:menu="@menu/menu_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:itemBackground="@drawable/nav_item_wallet_bg"
        app:itemTextColor="@drawable/nav_item_wallet_text_color"
        app:itemIconTint="@drawable/nav_item_wallet_text_color"/>
</LinearLayout>
